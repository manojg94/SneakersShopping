<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/productListFragment">



    <fragment
        android:id="@+id/productListFragment"
        android:name="com.manoj.sneakersshopping.ui.productList.ProductListFragment"
        android:label="ProductListFragment"
        tools:layout="@layout/fragment_product_list">
        <argument
            android:name="products"
            app:argType="com.manoj.sneakersshopping.ui.models.ProductModel"
            app:nullable="true"
            android:defaultValue="@null"/>
        <action
            android:id="@+id/action_productListFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.manoj.sneakersshopping.ui.cart.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_back_to_home"
            app:destination="@id/productListFragment"
            app:popUpTo="@+id/productListFragment"/>
    </fragment>



</navigation>